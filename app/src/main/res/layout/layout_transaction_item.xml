<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <TextView
            android:id="@+id/descriptionSymbol"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/category_circle"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:text="S" />

    <TextView
            android:id="@+id/tv_desc_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            tools:text="Food"
            android:textColor="@color/colorGrey"
            android:layout_toRightOf="@+id/descriptionSymbol"
            android:paddingLeft="30dp"
            android:paddingTop="8dp"
        />

    <TextView
            android:id="@+id/amt_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            tools:text="N20,000"
            android:textColor="@color/bg_screen3"
            android:layout_toRightOf="@+id/tv_desc_item"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:paddingTop="8dp"/>

    <TextView
            android:id="@+id/captureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc_item"
            android:layout_toRightOf="@+id/descriptionSymbol"
            android:paddingLeft="30dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="12sp"
            tools:text="Aug 6, 2017"
            android:textColor="@color/colorDarkGrey"/>

</RelativeLayout>