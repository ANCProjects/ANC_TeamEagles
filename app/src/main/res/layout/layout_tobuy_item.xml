<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="@dimen/small_margin"
        app:cardCornerRadius="@dimen/small_margin"
        android:layout_marginBottom="@dimen/inter_view_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/ib_tobuy_name"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_tobuy_name"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/ib_tobuy_name"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_alignTop="@id/ib_tobuy_name"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:layout_alignBottom="@id/ib_tobuy_name"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/ib_tobuy_price"
                android:src="@drawable/ic_nigeria_accent_naira"
                android:layout_below="@+id/ib_tobuy_name"
                android:layout_marginTop="@dimen/little_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_tobuy_price"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/tv_tobuy_name"
                android:layout_below="@+id/ib_tobuy_name"
                android:textSize="@dimen/normal_text_size"
                android:layout_alignTop="@id/ib_tobuy_price"
                android:gravity="center_vertical"
                android:layout_alignBottom="@id/ib_tobuy_price"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/ib_tobuy_priority"
                android:src="@drawable/ic_error_outline_black_24dp"
                android:layout_below="@+id/ib_tobuy_price"
                android:layout_marginTop="@dimen/little_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_tobuy_prority"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/tv_tobuy_name"
                android:layout_alignTop="@id/ib_tobuy_priority"
                android:gravity="center_vertical"
                android:layout_alignBottom="@id/ib_tobuy_priority"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/ib_tobuy_condition"
                android:src="@drawable/ic_money_bag"
                android:layout_below="@+id/ib_tobuy_priority"
                android:layout_marginTop="@dimen/little_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_tobuy_condition"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/tv_tobuy_name"
                android:layout_alignTop="@id/ib_tobuy_condition"
                android:textSize="@dimen/normal_text_size"
                android:gravity="center_vertical"
                android:layout_alignBottom="@id/ib_tobuy_condition"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/ib_tobuy_delete"
            android:src="@drawable/ic_delete"
            android:layout_below="@+id/ib_tobuy_condition"
            android:tint="@color/colorAccent"
            android:layout_marginTop="@dimen/little_margin"
            android:layout_width="42dp"
            android:layout_height="37dp"/>

        <TextView
            android:id="@+id/tv_tobuy_delete"
            android:layout_width="wrap_content"
            android:layout_alignStart="@+id/tv_tobuy_name"
            android:layout_alignTop="@id/ib_tobuy_delete"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:text="Delete Item"
            android:layout_alignBottom="@id/ib_tobuy_delete"
            android:layout_marginStart="@dimen/inter_view_margin"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tobuy_delete"
            android:layout_marginStart="14dp"
            android:text="Bought"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/little_margin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
