<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="@dimen/small_margin"
        app:cardCornerRadius="@dimen/small_margin"
        android:id="@+id/card_tobuy"
        android:layout_marginBottom="@dimen/little_margin"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/inter_view_margin"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_tobuy_name"
                android:textSize="@dimen/normal_text_size"
                tools:text="my name"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_icon_tobuy_price"
                android:layout_marginEnd="@dimen/inter_view_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_icon_tobuy_price"
                android:background="@drawable/ic_nigeria_accent_naira"
                android:layout_toStartOf="@+id/tv_tobuy_price"
                android:layout_alignTop="@+id/tv_tobuy_price"
                android:layout_width="@dimen/normal_text_size"
                android:layout_alignStart="@+id/ib_tobuy_condition"
                android:layout_height="@dimen/normal_text_size"/>

        <TextView
                android:id="@+id/tv_tobuy_price"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small_text"
                tools:text="48484"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/ib_tobuy_condition"
                android:background="@drawable/ic_error_outline_black_24dp"
                android:layout_toStartOf="@+id/tv_tobuy_condition"
                android:layout_alignTop="@+id/tv_tobuy_condition"
                android:layout_width="@dimen/normal_text_size"
                android:layout_height="@dimen/normal_text_size"/>

        <TextView
                android:id="@+id/tv_tobuy_condition"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small_text"
                tools:text="48484"
                android:layout_marginTop="@dimen/inter_view_margin"
                android:layout_below="@+id/tv_icon_tobuy_price"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
